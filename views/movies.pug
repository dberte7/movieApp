html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="../public/css/style.css")
        title Document
    body
        if title
            header.headerGen
                h1#header MovieApp
        if burger 
            header 
                div.hamburger
                    div._layer.-top
                    div._layer.-mid
                    div._layer.-bottom
                nav.menuppal
                    ul 
                        li 
                            a(href='/search') Search
                        li
                            a(href='/movies') Movies
                        li 
                            a(href='/logout') Logout
            script(src="../public/js/burger.js") 
        if signIn
            main
                img(src="../public/img/logo.jpeg" alt="logo")
                form(action="/signIn" method="POST" id="singInForm")
                    input(name="email" type="email" placeholder="Email")
                    input(name="password" type="password" placeholder="Password")
                    input(type="submit" value="Sign In")
                a(href='/signUp')
                    button Sign Up
        if signUp
            main
                img(src="../public/img/logo.jpeg" alt="logo")
                form(action="/signUp" method="POST" id="singUpForm")
                    input(name="name" type="text" id="name" placeholder="Name")
                    input(name="email" type="email" id="email" placeholder="Email")
                    input(name="password" type="password" id="password" placeholder="Password")
                    input(name="passwordConfirm" type="password" placeholder="Confirm Password")
                    input(type="submit" value="Sign Up")
        if dashboard
            header.header
                h1#header MovieApp
                input(type="submit",href=("/logout"), value="Salir" id="salir")
            main
                img(src="../public/img/logo.jpeg" alt="logo")
                a(href='/search')
                    button.search Search
                a(href='/movies')
                    button.movies Movies
        if searchPage
            main 
                form(action="/search" method="GET" id="searchForm")
                    input(type="text" id="title" name="s")
                    input(type="submit" value="search")
                if search
                    each film in search
                        div
                            h2 #{film.Title} 
                            img(src=film.Poster, alt="poster")
                            p Director: #{film.Director}
                            p Año: #{film.Year}
                            p Genre: #{film.Genre}
                            p Runtime: #{film.Runtime}
                            form(action=`/search/${film.imdbID}` method="GET" id="form")
                                input(type="submit" value="Details")
                if dbSearch
                    div
                        h2 #{dbSearch.Title} 
                        img(src=dbSearch.Poster, alt="poster")
                        p Director: #{dbSearch.Director}
                        p Año: #{film.Year}
                        p Genre: #{dbSearch.Genre}
                        p Runtime: #{dbSearch.Runtime}
                        form(action=`/search/${dbSearch.imdbID}` method="GET" id="form")
                            input(type="submit" value="Details")
        if movies
            main 
                if data 
                    each film in data 
                        div
                            h2 #{film.title}
                            img(src=film.image, alt="poster")
                            p Year: #{film.year} 
                            p Director: #{film.director} 
                            p Genre: #{film.genre}
                            p Runtime: #{film.runtime}
        if detail 
            main
                if data      
                    div
                        h2 #{data.Title}
                        img(src=data.Poster, alt="poster")
                        p Year: #{data.Year}
                        p Director: #{data.Director} 
                        p Genre: #{data.Genre}
                        p Runtime: #{data.Runtime}
                        p Add to favorites
                        input#check(type="checkbox" name=`${data.imdbID}`)
                        script(src="../public/js/fav.js")

