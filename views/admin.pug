doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="../public/css/style.css")
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">
        title Document
    body    
        if movies
            header.header
                h1#header MovieApp
                input(type="submit",href=("/logout"), value="Salir" id="salir")
            main
                h2 Mis Peliculas
                form(action="/createMovie" method="POST")
                    input.admin(type="submit" value="Crear") 
                if data 
                    each film in data 
                        div.searchMovie
                            h2 #{film.Title}
                            img(src=film.Poster, alt="poster")
                            p Year: #{film.Year} 
                            p Director: #{film.Director} 
                            p Genre: #{film.Genre}
                            p Runtime: #{film.Runtime}
                            form(method="POST" action="/editMovie")
                                input(type='hidden' name='Title' value=`${film.Title}`)
                                input.admin(type="submit" value="Edit") 
                            form(method="POST" action="/removeMovie")
                                input(type='hidden' name='Title' value=`${film.Title}`)
                                input(type='hidden' name='Poster' value=`${film.Poster}`)
                                input.red(type="submit" value="Delete") 
                if data3
                    h2 #{data3.Title}
                    img(src=data3.Poster, alt="poster")
                    p Year: #{data3.Year} 
                    p Director: #{data3.Director} 
                    p Genre: #{data3.Genre}
                    p Runtime: #{data3.Runtime}
                    form(method="POST" action="/editMovie")
                        input(type='hidden' name='Title' value=`${data3.Title}`)
                        input(type="submit" value="Edit") 
                    form(method="POST" action="/removeMovie")
                        input(type='hidden' name='Title' value=`${data3.Title}`)
                        input(type='hidden' name='Poster' value=`${data3.Poster}`)
                        input(type="submit" value="Delete") 
                if base 
                    div
                        h2 #{base.Title}
                        img(src=base.Poster, alt="poster")
                        p Year: #{base.Year} 
                        p Director: #{base.Director} 
                        p Genre: #{base.Genre}
                        p Runtime: #{base.Runtime}
                        form(method="POST" action="/editMovie")
                            input(type='hidden' name='Title' value=`${base.Title}`)
                            input(type="submit" value="Edit") 
                        form(method="POST" action="/removeMovie")
                            input(type='hidden' name='Title' value=`${base.Title}`)
                            input(type='hidden' name='Poster' value=`${base.Poster}`)
                            input(type="submit" value="Delete") 
        if create 
            main 
                h2 Peliculas
                form(action='/movies' method='POST' id='createForm')
                    input(type='text' name='Title' placeholder='Title')
                    input(type='text' name='Poster' placeholder='Poster')
                    input(type='text' name='Year' placeholder='Year')
                    input(type='text' name='Director' placeholder='Director')
                    input(type='text' name='Genre' placeholder='Genre')
                    input(type='text' name='Runtime' placeholder='Runtime')
                    input(type="submit" name='Create' value="Create" id='create')
            script(src="../public/js/admin.js")
        if edit
            if data  
                main 
                    h2 Peliculas
                    input(type="hidden" name='_id' value=`${data._id}`)
                    input(type='text' name='Title' placeholder=`${data.Title}`)
                    input(type='text' name='Poster' placeholder=`${data.Poster}`)
                    input(type='text' name='Year' placeholder=`${data.Year}`)
                    input(type='text' name='Director' placeholder=`${data.Director}`)
                    input(type='text' name='Genre' placeholder=`${data.Genre}`)
                    input(type='text' name='Runtime' placeholder=`${data.Runtime}`)
                    input(type="hidden" name='edit' value='true')
                    form(action="/movies" method="POST") 
                        input(type="submit" name='Edit' value="Edit" id='edit')
                script(src="../public/js/edit.js")
        if remove 
            main 
                h1 Delete Is Coming! 
            if deleteMov
                h2 #{deleteMov.Title}
                img(src=deleteMov.Poster, alt="poster")
                a(href='/movies')
                    button Cancelar
                form(action='/movies' method='POST' id="confirmForm")
                    input(type='hidden' name='Title' value=`${deleteMov.Title}`)
                    input(type="submit" name='confirm' value="Confirm" id="confirm")
            script(src="../public/js/remove.js")